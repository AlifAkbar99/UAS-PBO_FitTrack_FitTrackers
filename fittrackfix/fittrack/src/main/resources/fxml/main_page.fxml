<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.Cursor?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="root-pane-beige" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="yourpackage.MainPageController">
    <children>
        <ImageView fx:id="backButton" fitHeight="40.0" fitWidth="40.0" layoutX="40.0" layoutY="30.0" onMouseClicked="#handleGoToLandingPage" pickOnBounds="true" preserveRatio="true" styleClass="clickable-icon">
            <image>
                <Image url="@../img/arrowred.png" />
            </image>
            <cursor><Cursor fx:constant="HAND" /></cursor>
        </ImageView>
        <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="575.0" layoutY="20.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/speedred.png" />
            </image>
        </ImageView>
        <Label layoutX="645.0" layoutY="28.0" styleClass="title-label-red" text="FitTrack" />
        <Label fx:id="targetLabel" layoutX="1150.0" layoutY="35.0" onMouseClicked="#handleGoToTarget" styleClass="target-label" text="Target">
            <cursor><Cursor fx:constant="HAND" /></cursor>
        </Label>

        <Button fx:id="catatanButton" layoutX="320.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleGoToCatatan" styleClass="circular-button">
            <graphic>
                <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/book.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="kalkulatorButton" layoutX="550.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleGoToKalkulator" styleClass="circular-button-main">
            <graphic>
                <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/calculator.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="statistikButton" layoutX="780.0" layoutY="285.0" mnemonicParsing="false" onAction="#handleGoToStatistik" styleClass="circular-button">
            <graphic>
                <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../img/piechart.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</AnchorPane>